---
import Welcome from '../components/Welcome.astro'
import Layout from '../layouts/Framed.astro'

/* Specify a starting target. */
const target = 'https://dayofthedead.holiday/'
---

<Layout>
	<!-- <Welcome /> -->
	<iframe
		id="web-stage"
		src={target}
		class="w-full h-full"
	/>
</Layout>

<script is:inline>
/* Set target. */
const target = location.hash?.slice(1)

/* Validate target. */
if (typeof target !== 'undefined' && target !== '') {
	/* Initialize Iframe reference. */
	const iFrame = globalThis.document.getElementById('web-stage')

	/* Validate target. */
	if (target.includes('https://')) {
		/* Go to target. */
		iFrame.src = target
	} else {
		/* Go to target. */
		iFrame.src = 'https://' + target
	}
}
</script>

